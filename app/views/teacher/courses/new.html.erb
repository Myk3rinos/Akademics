 <div class="container">
    <h2 class = "text-center">Add a course</h2>
    <%= simple_form_for @course, html: {class: "w-50"} do |f| %>
        <%= f.error_notification %>
        <%# <%= f.error_notification message: f.object.errors[:base].to_sentence if %>
        <%= f.input :name %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :content %>
        <%= f.input :grade %>
        <div class="form btn btn-primary rounded-pill">
          <%= f.button :submit %>
        </div>
    <% end %>
</div>
