<div class="teacher-courses">
<h1 class="course-title"><%= @course.title %></h1>
<h2 class="course-name"><%= @course.name %></h2>

<div class="classes-container">
    <% @classes.each do |classe| %>
        <div class="class-card">
            <p class="class-name"><%= classe.name %></p>
            <p class="class-start-date"><%= classe.start_date %></p>
            <p class="class-end-date"><%= classe.end_date %></p>
            <%= link_to "Edit class", teacher_course_path(classe), class: "edit-class-link" %>
            <%= button_to "Delete", teacher_class_path(classe), method: :delete, class: 'delete-class-button', data: {turbo_confirm: 'are you sure ?'}  %>
        </div>
    <% end %>
</div>
<%= link_to "Create a new class", new_teacher_course_class_path(@course), class: "create-class-link" %>
</div>
