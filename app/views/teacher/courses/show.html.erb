<div class ="container">
    <div>
      <div class = "pt-3">
        <h1><%= @course.title %></h1>
        <h2><%= @course.name %></h2>
        <%= link_to "edit", "edit", class: "btn-aka" %>
        <div class = "pt-2">
        <%= button_to "Delete", teacher_course_path(@course), method: :delete, class: 'btn-aka', data: {turbo_confirm: 'are you sure ?'}  %>
        </div>
      </div>
        <div class="home-container">
          <div class="home-line-container">
            <div class="home-line"></div>
          </div>
        </div>
        <div class = "teacher-courses">
            <div class="container">
              <div class = "row">
                <% @classes.each do |classe| %>
                  <div class ="col-4">
                    <p><%= classe.name %></p>
                    <p><%= classe.start_date %></p>
                    <p><%= classe.end_date %></p>

                    <% if classe.start_date > Time.now %>
                        <p style="color:green">Open </p>
                        <% else%>
                        <p style="color:red">Closed </p>
                    <% end %>
                    <%# <%= link_to "Edit class", teacher_course_path(classe), class: "btn-aka mb-5" %>
                    <%= button_to "Delete", teacher_class_path([classe, @course]), method: :delete, class: 'btn-aka mb-3 mt-3', data: {turbo_confirm: 'are you sure ?'}  %>
                  </div>
                <% end %>
              </div>
            </div>
            <div >
              <%= link_to "Create a new class", new_teacher_course_class_path(@course), class: "btn-aka mt-2" %>
            </div>
        </div>
    </div>
</div>
