<div class="container">
  <div class="user-info">
    <h3>User Information</h3>
    <p><strong>First Name:</strong> <%= current_user.first_name %></p>
    <p><strong>Last Name:</strong> <%= current_user.last_name %></p>
    <p><strong>Email:</strong> <%= current_user.email %></p>
    <p><strong>Status:</strong> <%= current_user.status %></p>
    <% if current_user.status == 'teacher' %>
      <%= link_to "Create a new course", "courses/new", class: "button-new-course" %>
    <% end %>
  </div>
  <div class="course-list">
    <% @courses.each do |course| %>
      <div class="course-box">
        <h3><%= course.title %></h3>
        <%= link_to teacher_course_path(course), class: 'course-best-title' do %>
          <div>
            <h2><%= course.name %></h2>
            <%= link_to "reviews", teacher_reviews_path, class: "form btn rounded-pill btn-light text-danger" %>
            <%= link_to "enrollments", teacher_enrollments_path, class: "form btn rounded-pill btn-light text-danger" %>
          </div>
        <% end %>

      </div>
   <% end %>
  </div>
</div>
