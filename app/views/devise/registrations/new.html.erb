<div class="signup-card">
    <h2>Sign up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "Your email", class: "form-input" } %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} minimum characters" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", placeholder: "Your password", class: "form-input" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", placeholder: "Confirm your password", class: "form-input" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "form-submit" %>
      </div>
    <% end %>
    <div class="forgot-password">
        <%= render "devise/shared/links" %>
    </div>
</div>
