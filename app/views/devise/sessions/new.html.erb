<div class="login-card">
    <h2>Login</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "Your email", class: "form-input" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", placeholder: "Your password", class: "form-input" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "form-submit" %>
      </div>
    <% end %>
    <div class="forgot-password">
        <%= render "devise/shared/links" %>
    </div>
</div>
