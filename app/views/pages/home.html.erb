<div class="home-container">

    <div class="d-inline-flex">
        <% @teachers.each_with_index do |teacher, i| %>

            <%= link_to teacher_path(teacher), class: 'my-container container  ' do %>

                <div class="card-wrapper">
                    <div class="card">

                        <div class="card-image">
                            <%# <img src="https://image.ibb.co/dUTfmJ/profile_img.jpg" alt="profile one"> %>
                            <%= image_tag("teacher#{i}.png", class: "h-100 w-auto") %>
                        </div>
                        <div class="details">
                            <h2><%= teacher.first_name %> <%= teacher.last_name %>
                                <br>
                                <span class="job-title"><%= teacher.profil %></span>
                            </h2>
                        </div>

                    </div>
                </div><!-- end box wrapper -->
            <% end %>

        <% end %>
    </div>
</div>





