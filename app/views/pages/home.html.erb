<div class="home-container">

    <div class="teacher-card-container">
        <% @teachers.each_with_index do |teacher, i| %>

            <%= link_to teacher_path(teacher), class: 'my-container container  ' do %>

                <div class="card-wrapper">
                    <div class="card">

                        <div class="card-image">
                        <% if teacher.url_avatar %>
                            <img src="<%= teacher.url_avatar %>" alt="profile one">
                        <% end %>
                            <%# <%= image_tag("teacher#{i}.png", class: "h-100 w-auto") %> %>
                        </div>
                        <div class="details">
                            <h2>
                                <%= teacher.first_name %> <%= teacher.last_name %>
                            </h2>
                        </div>

                    </div>
                </div><!-- end box wrapper -->
            <% end %>

        <% end %>
    </div>
</div>





