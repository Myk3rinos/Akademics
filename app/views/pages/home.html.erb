<div class="home-container">
    <%= link_to courses_path do %>
        <h2>Bestseller</h2>
    <% end %>
    <div class="home-courses">
        <div class="course-card-container">
            <% @reviews.each_with_index do |review, i| %>
                <div class='course-card'>
                <%= link_to course_path(review.course) do %>
                <div class= "course-card-sub">
                        <%= image_tag("#{review.course.category}.jpg", class: "course-card-img") %>
                        <div class="courses-card-info">
                            <i class="fa-regular fa-heart courses-card-heart"></i>
                            <h3 class="card-title  <%= review.course.category%>"><%= review.course.name %></h3>
                            <p class="card-price"><%= review.course.price %> $</p>
                            <p class="card-time">1h30</p>
                            <p class="card-name"> <%= review.course.user.first_name %> <%= review.course.user.last_name %></p>
                            <div class="card-stars">
                                <% if (review.rating != nil)  %>
                                    <% review.rating.times do %>
                                        <i class="fa-solid fa-star" style="color: #e5c006;"></i>
                                    <% end %>
                                <% end %>
                            </div>
                        </div>
                </div>
                <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>



