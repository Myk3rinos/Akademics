<div class="featured-courses">
    <h2>Cours en vedette</h2>
    <% @courses.each do |course| %>
        <div class="course-card">
        <h3><%= course.title %></h3>
        <p><%= course.description %></p>
        </div>
    <% end %>
</div>

<div class="featured-teachers">
    <h2>Professeurs en vedette</h2>
