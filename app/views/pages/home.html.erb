<div class="home-container">
        <%= link_to courses_path do %>
            <h2>Bestseller</h2>
        <% end %>
        <div class="course-card-container">
            <%# <ul class="coudeqwd"> %>
                <% @reviews.each do |review| %>
                    <%= link_to course_path(review.course), class: 'course-card' do %>
                        <li class="courwqdqqse-cwdqdward">
                            <%= image_tag("#{review.course.category}.jpg", class: "course-card-img") %>
                            <div>
                                <h3 class="card-title"><%= review.course.name %></h3>
                                <p class="card-title"><%= review.course.price %>$</p>
                                <% if (review.rating != nil)  %>
                                    <div class="stars">
                                        <% review.rating.times do %>
                                            <i class="fa-solid fa-star" style="color: #e5c006;"></i>
                                        <% end %>
                                    </div>
                                <% end %>
                            </div>
                        </li>
                    <% end %>
                <% end %>
            <%# </ul> %>
    </div>
</div>
